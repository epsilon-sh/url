{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "types": [
      "vite/client"
    ]
  },
  "include": [
    "ui/**/*.ts",
    "ui/**/*.js",
    "ui/**/*.mjs",
    "api/**/*.ts",
    "api/**/*.js",
    "api/**/*.mjs",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}